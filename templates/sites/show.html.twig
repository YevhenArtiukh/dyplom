{% extends 'base.html.twig' %}

{% block title %}Sites{% endblock %}

{% block body %}
    <h1>Sites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ site.url }}</td>
            </tr>
            <tr>
                <th>CountData</th>
                <td>{{ site.countData }}</td>
            </tr>
            <tr>
                <th>LocalStorage</th>
                <td>{{ site.localStorage ? site.localStorage|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>SessionStorage</th>
                <td>{{ site.sessionStorage ? site.sessionStorage|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sites_index') }}">back to list</a>

    <a href="{{ path('sites_edit', {'id': site.id}) }}">edit</a>

    {{ include('sites/_delete_form.html.twig') }}
{% endblock %}
